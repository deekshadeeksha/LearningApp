<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest">

    <Button
        android:id="@+id/monkey1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="418dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/monkey2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alligator"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="451dp"
        android:layout_marginBottom="109dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/elephant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parrot" />

    <Button
        android:id="@+id/bird"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="94dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/monkey3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="230dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monkey2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lion"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="82dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zebra" />

    <Button
        android:id="@+id/monkey2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="285dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/monkey1"
        app:layout_constraintEnd_toStartOf="@+id/monkey3"
        app:layout_constraintStart_toEndOf="@+id/parrot"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/parrot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="107dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toStartOf="@+id/monkey2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zebra"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="196dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="72dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lion"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/elephant"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="99dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alligator"
        app:layout_constraintTop_toBottomOf="@+id/parrot" />

</android.support.constraint.ConstraintLayout>