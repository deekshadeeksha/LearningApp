<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/family" />

    <Button
        android:id="@+id/brother"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="166dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/baby" />

    <Button
        android:id="@+id/mother"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="@+id/brother"
        app:layout_constraintEnd_toStartOf="@+id/sister"
        app:layout_constraintStart_toEndOf="@+id/father" />

    <Button
        android:id="@+id/baby"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="143dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/brother"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sister"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="119dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/mother"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mother" />

    <Button
        android:id="@+id/father"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="207dp"
        android:layout_marginEnd="219dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/baby"
        app:layout_constraintEnd_toStartOf="@+id/mother"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mother" />

</android.support.constraint.ConstraintLayout>