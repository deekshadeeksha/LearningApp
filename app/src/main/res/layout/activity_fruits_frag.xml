<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FruitsFrag">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fruits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/berry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="85dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/orangeclick"
        app:layout_constraintStart_toEndOf="@+id/pineapple"
        app:layout_constraintTop_toBottomOf="@+id/watermelon" />

    <Button
        android:id="@+id/orangeclick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="75dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pear"
        app:layout_constraintStart_toEndOf="@+id/berry"
        app:layout_constraintTop_toBottomOf="@+id/strawberry" />

    <Button
        android:id="@+id/pineapple"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="75dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/berry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appleclick" />

    <Button
        android:id="@+id/appleclick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="144dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/pineapple"
        app:layout_constraintEnd_toStartOf="@+id/watermelon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/strawberry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="144dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/orangeclick"
        app:layout_constraintEnd_toStartOf="@+id/papaya"
        app:layout_constraintStart_toEndOf="@+id/watermelon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/papaya"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="175dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/pear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/strawberry"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="56dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/orangeclick"
        app:layout_constraintTop_toBottomOf="@+id/papaya" />

    <Button
        android:id="@+id/watermelon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="146dp"
        android:alpha="0.5"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/berry"
        app:layout_constraintEnd_toStartOf="@+id/strawberry"
        app:layout_constraintStart_toEndOf="@+id/appleclick"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>