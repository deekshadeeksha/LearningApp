<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtwo"
    tools:context=".Alphabets">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="404dp"
        android:layout_height="294dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/a" />

    <Button
        android:id="@+id/prevbtn"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/buttonleft" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="622dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/buttonright" />

    <Button
        android:id="@+id/backal"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="299dp"
        android:onClick="goBackal"
        android:background="@drawable/buttonback" />
</RelativeLayout>